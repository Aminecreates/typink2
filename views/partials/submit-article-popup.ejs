<!-- submitArticlePopup.ejs -->
<div id="submitArticleModal" class="modal">
  <div class="modal-content">
    <span class="close" id="closeSubmitArticleModal">&times;</span>

    <form id="submitArticleForm">
      <div class="input-container">
        <label for="title">Title:</label>
        <input type="text" id="article-title" name="title" required />

        <label for="topic">Topic:</label>
        <select id="article-topic" name="topic" required>
          <option value="Tech">Tech</option>
          <option value="Science">Science</option>
          <option value="Health">Health</option>
          <!-- Add more options as needed -->
        </select>

        <input
          type="file"
          accept="image/*"
          ,
          id="article-photo"
          ,
          name="article-photo"
        />
        <label for="article-photo">Choose a photo</label>

        <label for="tags">Tags:</label>
        <input
          type="text"
          id="tags"
          name="tags"
          placeholder="digital privacy, cybersecurity, data protection"
          required
        />
      </div>

      <label for="content">Content:</label>
      <div id="example"></div>

      <button class="submit-article-button" type="submit">
        Submit Article
      </button>
    </form>
  </div>
</div>
